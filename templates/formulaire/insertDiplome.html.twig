{% extends 'base.html.twig' %}

{% block title %}Hello FormulaireController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello âœ…</h1>

   <form action="/diplome" method="post">
		<fieldset>
			<legend>Formulaire</legend>
			<div class="form-group row">
				<label for="staticVille" class="col-sm-2 col-form-label">Nom</label>
				<div class="col-sm-10">
					<select name="ville" type="text" class="form-control-plaintext" id="ville">
					{% for item in villes %}
					<option value={{item.id}}> {{ item.nom }} </option>
					{% endfor %}
					</select>
				</div>
				<label for="staticUniv" class="col-sm-2 col-form-label">Nom</label>
				<div class="col-sm-10">
					<select name="univ" type="text" class="form-control-plaintext" id="univ">
					{% for item in univ %}
					<option value={{item.id}}> {{ item.nom }} </option>
					{% endfor %}
					</select>
				</div>
				<label for="staticBUT" class="col-sm-2 col-form-label">Nom</label>
				<div class="col-sm-10">
					<select name="but" type="text" class="form-control-plaintext" id="but">
					{% for item in but %}
					<option value={{item.id}}> {{ item.nom }} </option>
					{% endfor %}
					</select>
				</div>
				<label for="staticIntitule" class="col-sm-2 col-form-label">Nom</label>
				<div class="col-sm-10">
					<select name="intitule" type="text" class="form-control-plaintext" id="intitule">
					{% for item in intitule %}
					<option value={{item.id}}> {{ item.nom }} </option>
					{% endfor %}
					</select>
				</div>
			</div>
			<button type="submit" class="brn btn-primary">Submit</button>
		<fieldset>
	</form>
</div>





{% endblock %}
